<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_view"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.example.smearcamera.utils.SlantTopView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="10dp"
    app:layout_constraintHeight_percent="0.5"
    android:id="@+id/first"
    app:layout_constraintWidth_percent=".3"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/second"
    app:layout_constraintVertical_chainStyle="spread"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintTop_toTopOf="parent"
    />
    <com.example.smearcamera.utils.SlantTopView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintHeight_percent="0.5"
        android:id="@+id/second"
        app:layout_constraintWidth_percent=".3"
        app:layout_constraintStart_toEndOf="@id/first"
        app:layout_constraintEnd_toStartOf="@id/third"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.example.smearcamera.utils.SlantTopView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintHeight_percent="0.5"
        android:id="@+id/third"
        app:layout_constraintWidth_percent=".3"
        app:layout_constraintStart_toEndOf="@id/second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.example.smearcamera.utils.SmallSlantView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintHeight_percent="0.5"
        android:id="@+id/fourth"
        app:layout_constraintWidth_percent=".3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fifth"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.example.smearcamera.utils.SmallSlantView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintHeight_percent="0.5"
        android:id="@+id/fifth"
        app:layout_constraintWidth_percent=".3"
        app:layout_constraintStart_toEndOf="@id/fourth"
        app:layout_constraintEnd_toStartOf="@id/sixth"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.example.smearcamera.utils.SmallSlantView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintHeight_percent="0.5"
        android:id="@+id/sixth"
        app:layout_constraintWidth_percent=".3"
        app:layout_constraintStart_toEndOf="@id/fifth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>