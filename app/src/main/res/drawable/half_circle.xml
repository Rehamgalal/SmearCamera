<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
    <shape
        android:shape="rectangle">
        <solid android:color="#555555" />

    </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="10dp"
        >
        <shape
            android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <size
                android:width="10dp"
                android:height="5dp"/>
            <corners
                android:topLeftRadius="300dp"
                android:topRightRadius="300dp"/>

        </shape>
    </item>

    <item
        android:left="60dp"
        android:right="60dp"
        android:top="60dp">
        <shape
            android:shape="rectangle">
            <solid
                android:width="5dp"
                android:color="@color/green" />
            <size
                android:width="10dp"
                android:height="5dp"/>
            <corners
                android:topLeftRadius="300dp"
                android:topRightRadius="300dp"/>
        </shape>
    </item>

    <item
        android:left="70dp"
        android:right="70dp"
        android:top="70dp">
        <shape
            android:shape="rectangle">

            <solid
                android:width="5dp"
                android:color="#ffffff" />
            <size
                android:width="1dp"
                android:height="1dp"/>
            <corners
                android:topLeftRadius="300dp"
                android:topRightRadius="300dp"/>
        </shape>
    </item>

</layer-list>
